AT_CHECK([${has_xmllint} || exit 77])
AT_CHECK([
	$abs_top_builddir/src/rifiuti-vista -x $srcdir/samples/dir-sample1 | \
	$xmllint --noout -
],, [], [])
AT_CLEANUP

AT_SETUP([$Recycle.bin: DTD validation])
AT_KEYWORDS([recycledir xml])
AT_CHECK([${has_xmllint} || exit 77])
AT_CHECK([
	$abs_top_builddir/src/rifiuti-vista -x $srcdir/samples/dir-sample1 | \
	$xmllint --noout --dtdvalid $srcdir/rifiuti.dtd -
],, [ignore], [ignore])
AT_CLEANUP

